{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "LS",
      "LSP",
      "WebFetch(domain:*)",
      "WebSearch",
      "TodoRead",
      "TodoWrite",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(egrep *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(sed *)",
      "Bash(awk *)",
      "Bash(cut *)",
      "Bash(tr *)",
      "Bash(xargs *)",
      "Bash(mkdir *)",
      "Bash(rm *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(touch *)",
      "Bash(chmod *)",
      "Bash(ln *)",
      "Bash(echo *)",
      "Bash(printf *)",
      "Bash(pwd *)",
      "Bash(cd *)",
      "Bash(which *)",
      "Bash(type *)",
      "Bash(file *)",
      "Bash(stat *)",
      "Bash(du *)",
      "Bash(df *)",
      "Bash(tree *)",
      "Bash(bat *)",
      "Bash(rg *)",
      "Bash(ag *)",
      "Bash(fd *)",
      "Bash(diff *)",
      "Bash(patch *)",
      "Bash(tar *)",
      "Bash(zip *)",
      "Bash(unzip *)",
      "Bash(gzip *)",
      "Bash(gunzip *)",
      "Bash(env *)",
      "Bash(printenv *)",
      "Bash(export *)",
      "Bash(source *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(jq *)",
      "Bash(yq *)",
      "Bash(base64 *)",
      "Bash(md5sum *)",
      "Bash(sha256sum *)",
      "Bash(date *)",
      "Bash(bc *)",
      "Bash(test *)",
      "Bash(sleep *)",
      "Bash(time *)",
      "Bash(timeout *)",
      "Bash(tee *)",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(pip *)",
      "Bash(pip3 *)",
      "Bash(pytest *)",
      "Bash(black *)",
      "Bash(ruff *)",
      "Bash(poetry *)",
      "Bash(go *)",
      "Bash(cargo *)",
      "Bash(rustc *)",
      "Bash(make *)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(kubectl *)",
      "Bash(terraform *)",
      "Bash(aws *)",
      "Bash(gcloud *)",
      "Bash(az *)",
      "Bash(gh *)",
      "Bash(code *)",
      "Bash(lsof *)",
      "Bash(pkill *)",
      "Bash(killall *)",
      "Bash(ps *)",
      "Bash(top *)",
      "Bash(htop *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf / *)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~ *)",
      "Bash(sudo *)",
      "Bash(shutdown *)",
      "Bash(reboot *)",
      "Bash(mkfs *)",
      "Bash(dd *)"
    ]
  },
  "hooks": {
    "Setup": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'd=$PWD; while [ \"$d\" != \"/\" ]; do [ -f \"$d/.claude/scripts/bootstrap.sh\" ] && cd \"$d\" && bash .claude/scripts/bootstrap.sh && exit 0; d=$(dirname \"$d\"); done'"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "once": true,
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'd=$PWD; while [ \"$d\" != \"/\" ]; do [ -f \"$d/.claude/scripts/session-start.sh\" ] && cd \"$d\" && bash .claude/scripts/session-start.sh && exit 0; d=$(dirname \"$d\"); done'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'd=$PWD; while [ \"$d\" != \"/\" ]; do [ -f \"$d/.claude/scripts/session-end.sh\" ] && cd \"$d\" && bash .claude/scripts/session-end.sh && exit 0; d=$(dirname \"$d\"); done'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'd=$PWD; while [ \"$d\" != \"/\" ]; do [ -f \"$d/.claude/scripts/unified-gate.sh\" ] && cd \"$d\" && bash .claude/scripts/unified-gate.sh && exit 0; d=$(dirname \"$d\"); done'"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'd=$PWD; while [ \"$d\" != \"/\" ]; do if [ -f \"$d/.claude/scripts/block-no-verify.sh\" ]; then cd \"$d\" && bash .claude/scripts/block-no-verify.sh; exit $?; fi; d=$(dirname \"$d\"); done'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'd=$PWD; while [ \"$d\" != \"/\" ]; do [ -f \"$d/.claude/scripts/track-read.sh\" ] && cd \"$d\" && bash .claude/scripts/track-read.sh && exit 0; d=$(dirname \"$d\"); done'"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'd=$PWD; while [ \"$d\" != \"/\" ]; do [ -f \"$d/.claude/scripts/post-write.sh\" ] && cd \"$d\" && bash .claude/scripts/post-write.sh && exit 0; d=$(dirname \"$d\"); done'"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDENV_VERSION": "1.0.0"
  }
}
